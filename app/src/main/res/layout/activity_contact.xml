<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/colorPrimary"
    tools:context="com.example.akteruzzaman.NariOdhikar.ContactActivity">


    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Help Line"
        android:textColor="#000"
        android:textSize="40sp"
        android:textStyle="bold" />

    <LinearLayout
        android:background="@drawable/bg"
        android:weightSum="3"
        android:gravity="center"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:padding="10dp"
            android:layout_weight="2.2"
            android:textStyle="bold"
            android:textColor="#d50000"
            android:textSize="25sp"
            android:text="Number : 01863690129 "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:backgroundTint="@color/colorPrimary"
            android:clickable="true"
            android:id="@+id/callOne"
            android:layout_weight="0.8"
            android:padding="5dp"
            android:src="@drawable/call"
            android:layout_width="50dp"
            android:layout_height="50dp" />

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/bg"
        android:weightSum="3"
        android:gravity="center"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:padding="10dp"
            android:layout_weight="2.2"
            android:textStyle="bold"
            android:textColor="#d50000"
            android:textSize="25sp"
            android:text="Number : 01770329929 "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:backgroundTint="@color/colorPrimary"
            android:clickable="true"
            android:id="@+id/callTwo"
            android:layout_weight="0.8"
            android:padding="5dp"
            android:src="@drawable/call"
            android:layout_width="50dp"
            android:layout_height="50dp" />

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/bg"
        android:weightSum="3"
        android:gravity="center"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:padding="10dp"
            android:layout_weight="2.2"
            android:textStyle="bold"
            android:textColor="#d50000"
            android:textSize="25sp"
            android:text="Number : 01515262127 "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:clickable="true"
            android:id="@+id/callThree"
            android:layout_weight="0.8"
            android:padding="5dp"
            android:src="@drawable/call"
            android:layout_width="50dp"
            android:layout_height="50dp" />

    </LinearLayout>




</LinearLayout>
